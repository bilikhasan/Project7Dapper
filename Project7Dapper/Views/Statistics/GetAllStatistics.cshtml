@model IPagedList<Project7Dapper.Dtos.ResultStatisticsDto>
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "GetAllStatistics";
    Layout = "~/Views/_DashboardLayout.cshtml";
}
<br />

<form method="get" action="@Url.Action("GetAllStatistics")" class="search-form">
    <div class="search-container">
        <input type="text" name="searchQuery" value="@ViewBag.SearchQuery" placeholder="Search in 1 Million Data" class="search-input" style="margin-left:200px; width: 300px;  font-size: 16px;" />
    <button type="submit">Ara</button>
    </div>
</form>



